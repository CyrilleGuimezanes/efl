{
  "manifest_version": 2,

  "name": "ELSConnect",
  "description": "Retrieve some references from ELS databases",
  "version": "1.0",
  "default_locale": "en",
  "applications": {
     "gecko": {
       "id": "ELSConnect@els.fr"
     }
   },
  "content_scripts": [
    {
      "matches": ["*://*.search.yahoo.com/*","*://www.google.fr/*","*://www.bing.com/*","*://www.google.com/*"],
      "js": ["scripts/underscore.js", "scripts/jquery.js","scripts/sha256.js","scripts/iscroll.js", "scripts/backbone.js","scripts/utils.js", "scripts/widget-generator.js"],
      "css": ["styles/css/app.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["scripts/eventpage.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/icon-128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "http://int.abonnes.efl.fr/*",
    "http://abonnes.efl.fr/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self' ",
  "web_accessible_resources": [
    "views/*.html",
    "mock/*.html",
    "images/*.png",
    "images/*.gif",
    "images/*.jpg"
  ]
}
